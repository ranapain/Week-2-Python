def sum_of_diagonals(matrix):
    n = len(matrix)
    primary_sum = 0
    secondary_sum = 0

    for i in range(n):
        primary_sum += matrix[i][i]
        secondary_sum += matrix[i][n - i - 1]

    return primary_sum, secondary_sum
mat = [
    [1, 2, 3],
    [4, 5, 6],
    [7, 8, 9]
]

p_sum, s_sum = sum_of_diagonals(mat)
print("Primary diagonal sum:", p_sum)
print("Secondary diagonal sum:", s_sum)
print("Total (both):", p_sum + s_sum)
